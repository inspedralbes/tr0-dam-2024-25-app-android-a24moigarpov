<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título centrado en la parte superior, con margen inferior ajustado -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ MARCAS"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp" /> <!-- Aumenta el margen inferior para bajarlo más -->

    <!-- Botón centrado en el medio de la pantalla -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Juego"
        android:layout_centerInParent="true" /> <!-- Centra el botón en el medio -->

</RelativeLayout>
